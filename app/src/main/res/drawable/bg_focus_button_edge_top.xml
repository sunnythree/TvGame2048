<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 第一层 -->
    <item>
        <shape>
            <solid android:color="@color/blue_number2" />
            <!-- 圆角 -->
            <corners android:radius="10dp" />

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jinwei.tvgame2048">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/game_name"
        android:banner="@mipmap/game_name"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/GenerateActivityTheme">
        <activity
            android:name=".ui.GameModeChoiceActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".MainActivity"
            android:clearTaskOnLaunch="true"></activity>
        <activity
            android:name=".ui.GameSettingsActivity"
            android:theme="@style/SettingActivityTheme" />
        <activity android:name=".ui.start.GameStartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>